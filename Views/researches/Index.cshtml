@model IEnumerable<Project.Models.research>

@{
    ViewBag.Title = "Index";
}

<h2>Research</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.reID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td onmouseover="onIdMouseOver(@item.reID)">
                @Html.DisplayFor(modelItem => item.reID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.reID }) |
                @Html.ActionLink("Details", "Details", new { id = item.reID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.reID })
            </td>
        </tr>
    }

</table>

@section Scripts{


    <script type="text/javascript">
        function onIdMouseOver(reID) {
            $.ajax({
                url: "/api/researchesAPI",
                data: {
                    reID: reID
                },
                success: function (result) {
                    console.log(result);
                    alert(JSON.stringify(result));
                }

            });

        }
    </script>



}